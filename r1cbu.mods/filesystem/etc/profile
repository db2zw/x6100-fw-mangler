# - /etc/profile -

export PATH="/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin"

case "$_GLOBAL_BASH_RC_READ:$-" in
  yes:* ) ;;
  *:*i* ) 
    _GLOBAL_BASH_RC_READ=yes
    [ ! -f /etc/bash.bashrc ] || \
      . /etc/bash.bashrc
    ;;
esac

# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
	if [ -r "$i" ]; then
		. $i
	fi
done
unset i
